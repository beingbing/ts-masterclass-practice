{
  "include": [  // priority - low
    "src/*.ts" // "src/**/*.ts" if you want to recursively go down to each inside folder
  ],
  "files": [ // priority - high
    "src/app.ts"
  ],
  "exclude": [  // priority - mid
    "src/app.spec.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6"
    ],
    "outDir": "dist",
  }
}